<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/tv_forecast_date"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="jan 30 fri"
                android:textColor="@color/cityTextColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_weather_icon"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_forecast_date"
                android:src="@drawable/ic_humidity" />

            <TextView
                android:id="@+id/tv_forecast_condition"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="7dp"
                android:layout_toRightOf="@id/iv_weather_icon"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textColor="@color/cityTextColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_max_temp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/tv_temp_separation"
                android:gravity="center_vertical"
                android:text="32"
                android:textColor="@color/cityTextColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_temp_separation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/tv_min_temp"
                android:gravity="center_vertical"
                android:text="/"
                android:textColor="@color/cityTextColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_min_temp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:drawableRight="@drawable/ic_degree_celsius_yellows"
                android:gravity="center_vertical"
                android:text="32"
                android:textColor="@color/cityTextColor"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>